{
  "name": "@a24z/markdown-search",
  "version": "1.0.0",
  "description": "High-performance full-text search for markdown documents",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./adapters": {
      "types": "./dist/adapters/index.d.ts",
      "import": "./dist/adapters/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun && tsc --emitDeclarationOnly",
    "dev": "bun --watch src/index.ts",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "prepublishOnly": "bun run build",
    "prepare": "husky"
  },
  "keywords": [
    "markdown",
    "search",
    "full-text-search",
    "flexsearch",
    "bun",
    "indexing"
  ],
  "author": "A24Z Team",
  "license": "MIT",
  "dependencies": {
    "@a24z/markdown-utils": "latest",
    "@types/flexsearch": "^0.7.6",
    "flexsearch": "^0.8.205"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "typescript": "^5.0.4"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/a24z-ai/markdown-search.git"
  }
}
