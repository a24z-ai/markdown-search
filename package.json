{
  "name": "@a24z/markdown-search",
  "version": "2.0.0",
  "description": "High-performance full-text search for markdown documents",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./adapters": {
      "types": "./dist/esm/adapters/index.d.ts",
      "import": "./dist/esm/adapters/index.js",
      "require": "./dist/cjs/adapters/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "npm run build:clean && npm run build:esm && npm run build:cjs && npm run build:copy-package-files",
    "build:clean": "rm -rf dist",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:copy-package-files": "echo '{\"type\":\"module\"}' > dist/esm/package.json && echo '{\"type\":\"commonjs\"}' > dist/cjs/package.json",
    "dev": "bun --watch src/index.ts",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "prepublishOnly": "bun run build",
    "prepare": "husky"
  },
  "keywords": [
    "markdown",
    "search",
    "full-text-search",
    "flexsearch",
    "bun",
    "indexing"
  ],
  "author": "A24Z Team",
  "license": "MIT",
  "dependencies": {
    "@a24z/markdown-utils": "latest",
    "@types/flexsearch": "^0.7.6",
    "flexsearch": "^0.8.205"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "typescript": "^5.0.4"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/a24z-ai/markdown-search.git"
  }
}
